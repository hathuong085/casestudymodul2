@model List<Advertise>
@{
    ViewBag.Title = "Category management";
}
<h1>@ViewBag.Title</h1>
<div class="card shadow mb-4">
    <div class="card-header row py-3">
        <div>
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Description_1</th>
                        <th>Description_2</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var advertise in Model)
                        {
                            {
                                <tr>
                                    <td>
                                        @advertise.Description_1
                                    </td>
                                    <td>
                                        @advertise.Description_2
                                    </td>
                                    <td>
                                        <img width="300" height="200" src="~/images/ImgAdvertises/@advertise.Image" />
                                    </td>
                                    <td>
                                        <a asp-controller="Advertises" asp-action="Edit" asp-route-id="@advertise.AdvertiseId" class="btn btn-warning">Edit</a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
