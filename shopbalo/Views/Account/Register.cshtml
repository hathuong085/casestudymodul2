@model RegisViewModel
@{
    ViewBag.Title = "Register";
}
<div class="container mt-30 ml-50" style="margin-top:260px;margin-bottom:140px">
    <div class="col-sm-8 offset-sm-2 " style="margin-bottom:50px;margin-top:50px;">
        <form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post">
            <div style="border:2px solid">
                <div style="border:1px solid;margin:3px;background-color:white">
                    <div style="margin:15px;">
                        <h2 class="text-center mb-3 font-weight-bold">Registration</h2>
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label asp-for="FullName"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label asp-for="Gender"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Gender" class="form-control" />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label asp-for="Email">Email: </label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label asp-for="Password"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label asp-for="ConfirmPasswork"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="ConfirmPasswork" class="form-control" />
                                <span asp-validation-for="ConfirmPasswork" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label asp-for="Address"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row form-group justify-content-center mt-5">
                            <button type="submit" class="btn btn-primary form-group mr-5" style="width:100px;">Register</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-warning form-group" style="width:100px;">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>