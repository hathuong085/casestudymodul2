
@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<h3>Role Manahement &gt; @ViewBag.Title</h3>
<form enctype="multipart/form-data" asp-controller="Role" asp-action="Edit" method="post">
    <div style="border:2px solid">
        <div style="border:1px solid;margin:3px">
            <div style="margin:15px;margin-top:25px">
                <input hidden asp-for="RoleId" />
                <div class="row form-group">
                    <div class="col-sm-3">
                        <label asp-for="RoleName"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row form-group justify-content-center mt-3">
                    <button type="submit" class="btn btn-primary form-group mr-5" style="width:100px;">Update</button>
                    <button type="button" class="btn btn-danger form-group mr-5" style="width:100px;" data-toggle="modal" data-target="#myModal">
                        Delete
                    </button>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-warning form-group" style="width:100px;">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete Product</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Do you want t delete role ?
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <a asp-controller="Role" asp-action="Delete" asp-route-id="@Model.RoleId" class="btn btn-danger sizebtn">Delete</a>
                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>