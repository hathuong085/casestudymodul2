@model ViewHome
@{
    ViewData["Title"] = "Home Shop Bag";

    List<Advertise> advertises = ViewBag.Advertises;
}


<div class="new_arrivals" style="margin-top: 150px;">
    <div class="container">
        <div class="text-center">
            <h2 style="color:darkblue"><u>Products</u></h2>
        </div>
        <div class="row">
            <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
                <!-- Products-->
                @if (Model.balos != null)
                {
                    foreach (Balo balo in Model.balos)
                    {
                        <div class="product-item men">
                            <div class="product discount product_filter">
                                <div class="product_image">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@balo.BaloId">
                                        <img src="~/images/balos/@balo.Image" alt="">
                                    </a>
                                </div>
                                <div class="favorite favorite_left"></div>
                                @if (balo.Sale > 0)
                                {
                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-@balo.Sale</span></div>
                                }
                                <div class="product_info">
                                    <h6 class="product_name"><a asp-controller="Home" asp-action="Detail" asp-route-id="@balo.BaloId">@balo.BaloName</a></h6>
                                    @if (balo.Sale > 0)
                                    {
                                        <div class="product_price">$@(balo.Price-balo.Price*balo.Sale/100)<span>$@balo.Price</span></div>
                                    }
                                    else
                                    {
                                        <div class="product_price">$@balo.Price</div>
                                    }

                                </div>
                            </div>
                            <div class="red_button add_to_cart_button"><a asp-controller="Home" asp-action="Detail" asp-route-id="@balo.BaloId">add to cart</a></div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<div id="demo" class="carousel slide container" style="padding:20px 65px" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/ImgAdvertises/@advertises[1].Image" alt="Los Angeles" width="1100" height="500">
            <div class="carousel-caption">
                @if (advertises[1].Description_1 != null)
                {
                    <h3>@advertises[1].Description_1</h3>
                }
                @if (advertises[1].Description_2 != null)
                {
                    <p>@advertises[1].Description_2</p>
                }
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/ImgAdvertises/@advertises[2].Image" alt="Chicago" width="1100" height="500">
            <div class="carousel-caption">
                @if (advertises[2].Description_1 != null)
                {
                    <h3>@advertises[2].Description_1</h3>
                }
                @if (advertises[2].Description_2 != null)
                {
                    <p>@advertises[2].Description_2</p>
                }
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/ImgAdvertises/@advertises[3].Image" alt="New York" width="1100" height="500">
            <div class="carousel-caption">
                @if (advertises[3].Description_1 != null)
                {
                    <h3>@advertises[3].Description_1</h3>
                }
                @if (advertises[3].Description_2 != null)
                {
                    <p>@advertises[3].Description_2</p>
                }
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

