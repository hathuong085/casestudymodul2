@model EditViewHome
@{
    ViewBag.Title = "Create product";
    var categories = ViewBag.Categories as List<Category>;
}
<h1 class="h3 mb-2 text-gray-800">@ViewBag.Title</h1>
<div class="container mt-30 ml-50">
    <div class="col-sm-8 offset-sm-2">
        <form enctype="multipart/form-data" asp-controller="ProductsManage" asp-action="Edit" method="post">
            <input  hidden asp-for="Id" value="@Model.Id" />
            <input  hidden asp-for="AvatarPath" value="@Model.AvatarPath"/>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="CategoryId">Category</label>
                </div>
                <div class="col-sm-10">
                    <select asp-for="CategoryId" class="custom-select">
                        <option value="">Select a Category</option>
                        @if (categories != null && categories.Any())
                        {
                            foreach (var category in categories)
                            {
                                <option value="@category.CategoryId" selected="@(Model.CategoryId==category.CategoryId)">@category.CategoryName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="BaloName"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="BaloName" class="form-control" />
                    <span asp-validation-for="BaloName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Trademark"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Trademark" class="form-control" />
                    <span asp-validation-for="Trademark" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Size"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Material"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Color"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Sale"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Sale" class="form-control" />
                    <span asp-validation-for="Sale" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input class="custom-file-input" asp-for="Image">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="text-center mb-3">
                <img id="avatar" src="~/images/balos/@Model.AvatarPath" style="width:200px;height:200px" />
            </div>
            @*<div asp-validation-summary="All"></div>*@
        <div class="row form-group justify-content-center">
            <button type="submit" class="btn btn-primary form-group mr-5" style="width:75px;">Edit</button>
            <a asp-controller="ProductsManage" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger form-group mr-5" style="width:75px;">Delete</a>
            <a asp-controller="ProductsManage" asp-action="Index" class="btn btn-warning form-group" style="width:75px;">Back</a>
        </div>
        </form>
    </div>
</div>
@section Script{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                $("#avatar").attr("src", window.URL.createObjectURL($(this)[0].files[0]));
            });
        });
    </script>
}
