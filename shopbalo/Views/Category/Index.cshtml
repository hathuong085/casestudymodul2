@model List<Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Category management";
}
<h1>@ViewBag.Title</h1>
<div class="card shadow mb-4">
    <div class="card-header row py-3">
        <div>
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="ml-auto" style="padding-right:30px">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning" style="width:150px">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Category Name</th>
                        <th>Category Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var cate in Model)
                        {
                            {
                                <tr>
                                    <td>
                                        @cate.CategoryId
                                    </td>
                                    <td>
                                        @cate.CategoryName
                                    </td>
                                    <td>
                                        <img width="100" height="100" src="~/images/Category/@cate.Image" />
                                    </td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cate.CategoryId" class="btn btn-warning">Edit</a>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cate.CategoryId" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
